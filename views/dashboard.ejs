<%- include('./includes/head.ejs'); %>
    <style>
        .container{
            margin-top: 5%;
        }
        .contact-form{
            padding: 20px;
            background-color: rgb(238, 238, 238);
        }
    </style>
</head>
<body>
    <%- include('./includes/nav.ejs'); %> 
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <form action="/contact" method="POST" class="contact-form">
                    <p class="badge badge-dark pl-5 pr-5">contact us</p>
                    <%- include('./includes/messages.ejs') %> 
                    <div class="form-group">
                        <label class="badge badge-secondary">email</label>
                        <input type="email" name="email" class="form-control" placeholder="email" id="email">
                    </div>
                    <div class="form-group">
                        <label class="badge badge-secondary">subject</label>
                        <input type="text" name="subject" class="form-control" placeholder="subject" id="subject">
                    </div>
                    <div class="form-group">
                        <label class="badge badge-secondary">message</label>
                        <textarea name="message" class="form-control" cols="30" rows="10" placeholder="message body" id="message"></textarea>
                        <!-- <input type="text" name="message" class="form-control" placeholder="message"> -->
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-sm btn-block btn-info" onclick="contactMail()" value="contact us">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/public/vendors/jquery-3.5.0.js"></script>
    <script src="/public/vendors/bootstrap.min.js"></script>
    <script src="/public/vendors/notify.min-0.4.2.js"></script>
    <script src="/public/vendors/socket.io-2.3.0.js"></script>
    <script src="/public/scripts/index.js"></script>
</body>
</html>
