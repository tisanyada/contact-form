<%- include('../includes/head.ejs'); %>
<style>
    .container {
        margin-top: 5%;
    }

    .signup-form {
        padding: 20px;
        background-color: rgb(238, 238, 238);
    }
</style>
</head>

<body>
    <%- include('../includes/nav.ejs'); %>
    <div class="container">
        <div class="row">
            <div class="col-md-7 mx-auto">
                <form action="/admin/register" method="POST" class="signup-form">
                    <p class="badge badge-danger">register</p>
                    <%- include('../includes/messages.ejs'); %>
                    <div class="form-group">
                        <label class="badge badge-secondary">username</label>
                        <input type="text" name="username" class="form-control" placeholder="username">
                    </div>
                    <div class="form-group">
                        <label class="badge badge-secondary">email</label>
                        <input type="text" name="email" class="form-control" placeholder="email">
                    </div>
                    <div class="form-group">
                        <label class="badge badge-secondary">password</label>
                        <input type="password" name="password" class="form-control" placeholder="password">
                    </div>
                    <div class="form-group">
                        <label class="badge badge-secondary">confirm password</label>
                        <input type="password" name="password2" class="form-control" placeholder="confirm password">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-sm btn-block btn-danger" value="login">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/public/scripts/jquery-3.5.0.js"></script>
    <script src="/public/scripts/bootstrap.min.js"></script>
</body>

</html>